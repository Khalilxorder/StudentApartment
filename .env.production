# ============================================
# PRODUCTION ENVIRONMENT - TEMPLATE
# ============================================
# DO NOT COMMIT THIS FILE!
# This is a template for production deployment.
# Replace placeholder values with real secrets from your infrastructure.
# 
# For Vercel deployment:
#   1. Set these variables in Vercel Project Settings â†’ Environment Variables
#   2. Mark sensitive variables as sensitive/encrypted
#   3. Set them for Production environment
#
# For self-hosted (Docker, EC2, etc.):
#   1. Export these as environment variables during deployment
#   2. Use a secrets manager (AWS Secrets Manager, Vault, etc.)
#   3. Never hardcode secrets in the deployment script

# ============================================
# SUPABASE - PRODUCTION
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROD_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_PRODUCTION_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_PRODUCTION_SERVICE_ROLE_KEY
DATABASE_URL=postgresql://postgres:YOUR_PROD_PASSWORD@db.YOUR_PROD_PROJECT.supabase.co:5432/postgres

# ============================================
# GOOGLE SERVICES - PRODUCTION
# ============================================
GOOGLE_AI_API_KEY=YOUR_PROD_GOOGLE_AI_KEY
GOOGLE_GEMINI_API_KEY=YOUR_PROD_GEMINI_KEY
GOOGLE_CLIENT_ID=YOUR_PROD_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_PROD_GOOGLE_CLIENT_SECRET
GOOGLE_SIGN_IN_API_KEY=YOUR_PROD_GOOGLE_SIGN_IN_KEY
NEXT_PUBLIC_MAPS_API_KEY=YOUR_PROD_MAPS_KEY

# ============================================
# STRIPE - PRODUCTION (LIVE KEYS!)
# ============================================
# CRITICAL: Use LIVE keys, not test keys!
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_LIVE_KEY
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_SECRET
STRIPE_WEBHOOK_SECRET=whsec_YOUR_LIVE_WEBHOOK_SECRET

# ============================================
# REDIS - PRODUCTION
# ============================================
# Use managed service: Upstash, AWS ElastiCache, or self-hosted
REDIS_URL=redis://YOUR_PROD_REDIS_HOST:6379
ENABLE_REDIS_RATE_LIMITING=true

# Optional: Upstash
UPSTASH_REDIS_REST_URL=https://YOUR_PROD_ID.upstash.io
UPSTASH_REDIS_REST_TOKEN=YOUR_PROD_TOKEN

# ============================================
# MEILISEARCH - PRODUCTION
# ============================================
MEILISEARCH_HOST=https://YOUR_PROD_MEILISEARCH_HOST.com
MEILISEARCH_API_KEY=YOUR_PROD_MEILISEARCH_KEY

# ============================================
# EMAIL - PRODUCTION
# ============================================
# Use Resend for production reliability
RESEND_API_KEY=YOUR_PROD_RESEND_KEY

# ============================================
# AUTHENTICATION & SECURITY - PRODUCTION
# ============================================
# Generate fresh secrets for production!
# NEVER use development secrets
NEXTAUTH_SECRET=YOUR_PROD_NEXTAUTH_SECRET_MINIMUM_32_CHARS
NEXTAUTH_URL=https://your-production-domain.com
JWT_SECRET=YOUR_PROD_JWT_SECRET
ENCRYPTION_KEY=YOUR_PROD_ENCRYPTION_KEY_BASE64

# ============================================
# OBSERVABILITY - PRODUCTION
# ============================================
# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=YOUR_PROD_SENTRY_DSN
SENTRY_AUTH_TOKEN=YOUR_PROD_SENTRY_AUTH_TOKEN

# PostHog for analytics
NEXT_PUBLIC_POSTHOG_KEY=YOUR_PROD_POSTHOG_KEY

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-YOUR_PROD_GA_ID

# ============================================
# FEATURE FLAGS - PRODUCTION
# ============================================
# Be conservative: disable experimental features in prod
ENABLE_EXPERIMENTAL_RANKING=false
ENABLE_BANDIT_EXPLORATION=false
ENABLE_SEMANTIC_SEARCH=true
ENABLE_SANDBOX_MODE=false

# ============================================
# BUILD & DEPLOYMENT
# ============================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-production-domain.com
VERCEL_ENV=production
